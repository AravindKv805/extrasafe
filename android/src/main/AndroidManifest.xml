<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extrasafe.android.app" >

    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/extrasafe128"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.extrasafe.android.app.ShareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.extrasafe.android.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.extrasafe.android.app.SettingsActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
